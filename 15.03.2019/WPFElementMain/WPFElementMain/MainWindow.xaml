                <StackPanel Orientation="Horizontal">
                    <Image Height="50" Source="IMG/bear.jpg"></Image>
                </StackPanel>
            </ComboBoxItem>
            <ComboBoxItem>
                    <Image Height="50" Source="IMG/lux.png"></Image>                
            </ComboBoxItem>
        </ComboBox>


    </Grid>
</Window>
