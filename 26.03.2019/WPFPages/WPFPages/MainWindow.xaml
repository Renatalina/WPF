<Window x:Class="WPFPages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFPages"
        mc:Ignorable="d"
        WindowStyle="None" AllowsTransparency="True" 
        Title="MainWindow" Height="300" Width="300" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Window.Background>
        <ImageBrush ImageSource="shapes.png"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>            
        </Grid.RowDefinitions>
        <Button Margin="20" Content="Sample button" />
        <Button Grid.Row="3" Margin="20" Content="Close" Click="Button_Click"/>
    </Grid>
</Window>
